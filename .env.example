# AgroSense AI Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here

# Azure Cognitive Search Configuration
AZURE_SEARCH_KEY=your_azure_search_key_here
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net/
AZURE_SEARCH_INDEX_NAME=your_index_name_here

# Azure Cosmos DB Configuration
COSMOSDB_CONNECTION_STRING=AccountEndpoint=https://your-account.documents.azure.com:443/;AccountKey=your_account_key==;
COSMOSDB_DATABASE_NAME=agrosense
COSMOSDB_CONTAINER_NAME=data

# General Azure Configuration
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_KEY=your_azure_key_here

# Application Settings
USE_AZURE=false
NODE_ENV=development

# Optional: Local server port
PORT=3000
